doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Courses Page
    style.
      .maindiv {
        width: 100%;
        height: auto;
        box-sizing: border-box;
        /* border:1px solid; */
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      .eachdiv {
        width: 58%;
        height: 210px;
        box-sizing: border-box;
        border: 2px solid whitesmoke;
        border-radius: 12px;
        /* box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px; */
        display: flex;
        flex-direction: row;
        /* justify-content: space-between; */
        margin-top: 5%;
        align-items: center;
      }
      .eachdiv:hover {
        box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
        transition: transform 0.3s ease;
        transform: translateY(-5px);
      }
      .imgdiv {
        /* border: 1px solid; */
        /* box-sizing: border-box; */
        width: 40%;
        height: 100%;
      }
      .contentdiv {
        width: 80%;
        height: 100%;
        display: flex;
        /* border:1px solid; */
        flex-direction: column;
        /* align-items: center; */
        box-sizing: border-box;
        justify-content: space-evenly;
      }
      .titlediv {
        width: 100%;
        box-sizing: border-box;
        /* border:1px solid; */
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
        align-items: center;
      }
      .coursetitle {
        font-family: 'Times New Roman', Times, serif;
        font-size: xx-large;
        /* border: 1px solid; */
      }
      .tddiv {
        width: 100%;
        box-sizing: border-box;
        /* border: 1px solid; */
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
      }
      .typebutton {
        border-radius: 5px;
        border: 1px solid cadetblue;
        font-size: large;
        color: white;
        background-color: cadetblue;
      }
      .durationbutton {
        border-radius: 5px;
        border: 1px solid rgb(160, 95, 107);
        font-size: large;
        color: white;
        background-color: rgb(160, 95, 107);
      }
      .pricebutton {
        border-radius: 5px;
        border: 1px solid rgb(158, 160, 95);
        font-size: large;
        color: white;
        background-color: rgb(158, 160, 95);
      }
      .initial-links a {
                margin-right: 1%; /* Add space to the right of each link */
            }
  body
    h1 Courses Page
    div.initial-links
                a(href="/") Home
                a(href="/logout") Logout
    .maindiv
      each info in coursesinfo
        .eachdiv
          .imgdiv
            img(width='100%', height='100%', src=info.courselogourl)
          .contentdiv
            .titlediv
              h3.coursetitle= info.coursename
              a.viewmorelink(href=`/courses/${info.coursenickname}`) View More
            .tddiv
              button.typebutton= info.coursetype
              button.durationbutton #{info.courseduration} months
              button.pricebutton &#x20B9;#{info.courseprice}
